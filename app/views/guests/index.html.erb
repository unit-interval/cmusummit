<h1>Listing guests</h1>

<table>
  <tr>
    <th>Last name</th>
    <th>First name</th>
    <th>Type</th>
    <th>Title</th>
    <th>Bio</th>
    <th>Picture</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @guests.each do |guest| %>
  <tr>
    <td><%= guest.last_name %></td>
    <td><%= guest.first_name %></td>
    <td><%= guest.datatype %></td>
    <td><%= guest.title %></td>
    <td><%= guest.bio %></td>
    <td><%= guest.picture %></td>
    <td><%= link_to 'Show', guest %></td>
    <td><%= link_to 'Edit', edit_guest_path(guest) %></td>
    <td><%= link_to 'Destroy', guest, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

